{
  "$schema": "https://opencode.ai/config.json",
  "server": {
    "port": 2442,
    "hostname": "0.0.0.0"
  },
  "autoupdate": false,
  "permission": "allow",
  "enabled_providers": ["openai-api", "google-api", "anthropic-api"],
  "default_agent": "build",
  "model": "{env:OPENCODE_MODEL}",
  "small_model": "{env:OPENCODE_SMALL_MODEL}",
  "mcp": {
    "firecrawl": {
      "type": "remote",
      "url": "https://mcp.firecrawl.dev/{env:FIRECRAWL_API_KEY}/v2/mcp"
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "permission": "allow",
      "prompt": "你是 Agili, 一个反应迅速、轻盈灵巧、随需而至的 AI 精灵。你不仅擅长编程，更擅长写作和编辑。"
    },

    "editor": {
      "mode": "subagent",
      "permission": "allow",
      "model": "{env:EDITOR_MODEL}"
    },
    "researcher": {
      "mode": "subagent",
      "permission": "allow"
    },
    "reviewer": {
      "mode": "subagent",
      "permission": "allow",
      "model": "{env:REVIEW_MODEL}"
    },
    "writer": {
      "mode": "subagent",
      "permission": "allow",
      "model": "{env:WRITER_MODEL}"
    }
  },
  "provider": {
    "openai-api": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "OpenAI(API)",
      "options": {
        "baseURL": "{env:OPENAI_BASE_URL}",
        "apiKey": "{env:OPENAI_API_KEY}"
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2",
          "limit": { "context": 128000, "output": 64000 }
        }
      }
    },
    "google-api": {
      "npm": "@ai-sdk/google",
      "name": "Google(API)",
      "options": {
        "baseURL": "{env:GOOGLE_BASE_URL}",
        "apiKey": "{env:GOOGLE_API_KEY}"
      },
      "models": {
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview",
          "limit": { "context": 1000000, "output": 64000 }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview",
          "limit": { "context": 1000000, "output": 64000 }
        }
      }
    },
    "anthropic-api": {
      "npm": "@ai-sdk/anthropic",
      "name": "Anthropic(API)",
      "options": {
        "baseURL": "{env:ANTHROPIC_BASE_URL}",
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      },
      "models": {
        "claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5",
          "limit": { "context": 128000, "output": 64000 }
        },
        "gemini-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": { "context": 128000, "output": 64000 }
        },
        "gemini-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 (Antigravity)",
          "limit": { "context": 128000, "output": 64000 }
        }
      }
    }
  }
}
